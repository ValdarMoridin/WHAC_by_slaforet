<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/full_cost"
        android:textColor="@android:color/primary_text_light"
        android:textSize="@dimen/textview_standard_height"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/specialistToggleButton"
        android:layout_toStartOf="@+id/specialistToggleButton"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/full_cost"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="@dimen/textview_standard_height"
        android:textStyle="normal"
        android:layout_below="@+id/tvTitle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" PC"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="@dimen/textview_standard_height"
        android:textStyle="normal"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/detail"
        android:layout_toEndOf="@+id/detail"/>

    <ToggleButton
        android:id="@+id/specialistToggleButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        style="@style/specialistToggleButton"
        android:background="@drawable/ic_toggle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>